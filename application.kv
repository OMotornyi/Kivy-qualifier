#:kivy 1.0.9

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            rootpath: root.home

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<Root>:
    img: pic
    scat: logo_py
    load_button: load_button
    BoxLayout:
        size_hint_x : 1
        size_hint_y : 0.05
        pos_hint: {'top':1}
        Button:
            id:load_button
            text: 'Load'
            size_hint_x : 0.7
            on_release: root.show_load()
        Button:
            id:reset_button
            text: 'Reset size/angle'
            size_hint_x : 0.3
            on_release: logo_py.reset()
    PydisLogo:
        id: logo_py
        size_hint: None, None
        Image:
            id: pic
            source: "python_discord_logo.png"
            size: logo_py.size
            size_hint_x: None
            size_hint_y: None
            allow_stretch: True
            keep_ratio: False
    Slider:
        pos_hint:{'x':0.95}
        size_hint_y:0.95
        size_hint_x: 0.05
        orientation: 'vertical'
        value : root.zoom_factor
        min: 1.01
        max: 3
        on_value:
            root.zoom_factor = args[1]
            print(root.zoom_factor)
