#:kivy 1.0.9

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            rootpath: root.home

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)


<Root>:
    img: pic
    scat: logo_py
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: 'Load'
                on_release: root.show_load()
    PydisLogo:
        id: logo_py
        size: pic.size
        size_hint: None, None
        on_kv_post:
            #print("on_kv_post fired")
            self.center = self.parent.center
        Image:
            id: pic
            #source: root.source
            #center: self.parent.center
            source: "data/python_discord_logo.png"
            #source: 'data/bla.txt'
            size_hint_x: None
            size_hint_y: None
            allow_stretch: True
            keep_ratio: False
